{
  "name": "edutech",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "config:dev": "node config.js",
    "config:staging": "ENV_FILE=.env.staging node config.js",
    "config:prod": "ENV_FILE=.env.production node config.js",
    "prestart": "npm run config:dev",
    "start": "ng serve --configuration=development",
    "start:en": "ng serve --configuration=development",
    "start:fr": "ng serve --configuration=fr",
    "build": "ng build",
    "build:staging": "ng build --configuration=staging",
    "build:en": "ng build --configuration=en",
    "build:fr": "ng build --configuration=fr",
    "watch": "ng build --watch --configuration development",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.{ts,html,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,css,json}\"",
    "test": "ng test",
    "test:coverage": "ng test --code-coverage --watch=false",
    "e2e": "cypress run",
    "e2e:open": "cypress open",
    "e2e:smoke": "cypress run --spec \"cypress/e2e/smoke-tests.cy.ts\"",
    "e2e:regression": "cypress run --spec \"cypress/e2e/regression-suite.cy.ts\"",
    "e2e:security": "cypress run --spec \"cypress/e2e/security.cy.ts\"",
    "e2e:integration": "cypress run --spec \"cypress/e2e/integration-tests.cy.ts\"",
    "e2e:journey": "cypress run --spec \"cypress/e2e/complete-user-journey.cy.ts,cypress/e2e/admin-complete-flow.cy.ts\"",
    "e2e:headed": "cypress run --headed",
    "e2e:chrome": "cypress run --browser chrome",
    "e2e:firefox": "cypress run --browser firefox",
    "e2e:edge": "cypress run --browser edge",
    "e2e:docker": "docker-compose -f docker-compose.e2e.yml up --build --abort-on-container-exit",
    "e2e:docker:down": "docker-compose -f docker-compose.e2e.yml down",
    "docker:build": "docker build -t edutech:latest .",
    "docker:run": "docker run -d -p 80:80 --name edutech edutech:latest",
    "docker:stop": "docker stop edutech && docker rm edutech",
    "deploy:staging": "npm run build:staging && npm run docker:build",
    "deploy:prod": "npm run build && npm run docker:build"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/localize": "^20.3.10",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@angular/service-worker": "^20.3.10",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.8",
    "@angular/cli": "^20.3.8",
    "@angular/compiler-cli": "^20.3.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "cypress": "^15.6.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-angular": "^5.0.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2"
  }
}
